<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">
	<record model="ir.module.category" id="base.module_rdm">
		<field name="name">Redemption and Management Point</field> 
		<field name="sequence">7</field>
	</record>

    <record model="res.groups" id="base.group_user">
        <field name="comment">the user will be able to manage his own human resources stuff (leave request, timesheets, ...), if he is linked to an employee in the system.</field>
    </record>

    <record id="base.group_rdm_operator" model="res.groups">
        <field name="name">Operator</field>
        <field name="category_id" ref="base.module_rdm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will be able to create and update transaction data.</field>
    </record>
    <record id="base.group_rdm_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="comment">the user will have an access certain features on Redemption Module.</field>
        <field name="category_id" ref="base.module_rdm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_rdm_operator'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
    <record id="base.group_rdm_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">the user will have an access all features on Redemption Module.</field>
        <field name="category_id" ref="base.module_rdm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_rdm_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
</data>
</openerp>